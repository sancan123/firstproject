<Page x:Class="Mesurement.UiLayer.DataManager.Controls.PageConfig"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mesurement.UiLayer.DataManager.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="软件配置">
    <Grid>
        <StackPanel Margin="20"
                    HorizontalAlignment="Left">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="是否预览Word文件"
                           VerticalAlignment="Center"/>
                <CheckBox VerticalAlignment="Center"
                          Grid.Column="1"
                          Name="checkboxPreview"/>
            </Grid>
            <Button Content="保存"
                    Width="80"
                    Margin="5"
                    Style="{StaticResource ButtonStyleBorder}"
                    Click="Click_SaveConfig"
                    Height="25"/>
        </StackPanel>
    </Grid>
</Page>
