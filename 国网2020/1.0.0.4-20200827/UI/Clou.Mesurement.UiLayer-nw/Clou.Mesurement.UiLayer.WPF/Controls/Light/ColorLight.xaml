<UserControl x:Class="Mesurement.UiLayer.WPF.Controls.Light.ColorLight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="16"
             Height="16">
    <UserControl.Resources>
        <Storyboard x:Key="storyBoard">
            <ColorAnimation Storyboard.TargetName="brush" 
                                                         AutoReverse="True"
                       Storyboard.TargetProperty="Color" 
                                                        From="Green" 
                                            To="GreenYellow" 
                       Duration="0:0:0.2" BeginTime="0:0:0"/>
        </Storyboard>
    </UserControl.Resources>
    <Grid >
        <Ellipse Name="ellipse" StrokeThickness="0.5">
            <Ellipse.Stroke>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionTextColorKey}}"/>
            </Ellipse.Stroke>
            <Ellipse.Fill>
                <SolidColorBrush x:Name="brush" 
                                 Color="LightGray"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
