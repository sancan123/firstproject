<UserControl x:Class="Mesurement.UiLayer.WPF.Controls.Light.FlashLight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="10"
             Height="10">
    <UserControl.Resources>
        <Storyboard x:Key="storyBoard">
            <ColorAnimationUsingKeyFrames 
			Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
			 Storyboard.TargetName="ellipse">
            	<EasingColorKeyFrame KeyTime="0:0:0" Value="Green"/>
            	<EasingColorKeyFrame KeyTime="0:0:0.1" Value="LightGreen"/>
            	<EasingColorKeyFrame KeyTime="0:0:0.2" Value="Green"/>
				<EasingColorKeyFrame KeyTime="0:0:0.3" Value="LightGray"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <Grid >
        <Ellipse Name="ellipse" StrokeThickness="0.5" 
		Fill="LightGray">
            <Ellipse.Stroke>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionTextColorKey}}"/>
            </Ellipse.Stroke>
        </Ellipse>
    </Grid>
</UserControl>
