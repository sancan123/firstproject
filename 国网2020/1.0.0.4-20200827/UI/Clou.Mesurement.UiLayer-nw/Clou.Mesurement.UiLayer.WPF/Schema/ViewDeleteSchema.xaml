<UserControl x:Class="Mesurement.UiLayer.WPF.Schema.ViewDeleteSchema"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:basemodel="clr-namespace:Mesurement.UiLayer.WPF.Model"
             xmlns:ViewModel="clr-namespace:Mesurement.UiLayer.ViewModel.Schema;assembly=Mesurement.UiLayer.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             FontSize="24"
             mc:Ignorable="d" 
             d:DesignHeight="500"
             d:DesignWidth="600">
    <UserControl.Resources>
        <ViewModel:SchemaOperationViewModel x:Key="SchemaModel"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource SchemaModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Margin="3"
                 SelectedItem="{Binding SelectedSchema}"
                 ItemsSource="{Binding Schemas}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                        <TextBlock Text="{Binding SCHEMA_NAME}"
                                   ToolTip="{Binding SCHEMA_NAME}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1"
                    Margin="3">
            <TextBlock Text="{DynamicResource 当前方案名称}"
                       Margin="3,10"/>
            <TextBlock Margin="3,10"
                       Text="{Binding SelectedSchema.SCHEMA_NAME}"/>
            <Button Content="{DynamicResource 删除方案}"
                    Margin="5"
                    Width="160"
                    CommandParameter="DeleteSchema"
                    Command="{Binding LocalCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
