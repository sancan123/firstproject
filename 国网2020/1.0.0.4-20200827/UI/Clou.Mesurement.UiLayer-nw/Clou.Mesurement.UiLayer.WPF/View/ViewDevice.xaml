    <basemodel:DockControlDisposable.Resources>
        <Converter:NotBoolConverter x:Key="NotBoolConverter"/>
        <Style TargetType="{x:Type Controls:MeterContainer}">
            <Style.Resources>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Viewbox Margin="3">
                                    <Border BorderThickness="1"
                                            Width="100"
                                            Height="70"
                                            BorderBrush="DarkGray">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <CheckBox VerticalAlignment="Center"
                                                          IsChecked="{Binding IsSelected}"
                          HorizontalAlignment="Center"/>
                                                <Border BorderBrush="White" 
                        Background="{DynamicResource 屏幕颜色}"
                        Margin="1"
                        Grid.Column="1"
                        BorderThickness="1">
                                                    <TextBlock  VerticalAlignment="Center"
                                                                Text="{Binding TextScreen}"
                                                                Foreground="White"
                                                                FontWeight="Bold"
                           Grid.Column="1"
                           HorizontalAlignment="Center"
                           Margin="1"/>
                                                </Border>
                                            </Grid>
                                            <Border BorderBrush="Gray"
                                                    x:Name="borderTop"
                                                    Background="#FF303030"
                    BorderThickness="1"
                    Grid.Row="1"
                    Margin="5,4"/>
                                            <Border BorderBrush="Gray"
                                                    x:Name="borderHaveMeter"
                                                    Background="#FF303030"
                    BorderThickness="1"
                    Grid.Row="2"
                    Margin="5,4"/>
                                            <Border BorderBrush="Gray"
                                                    Background="#FF303030"
                                                    x:Name="borderBottom"
                    BorderThickness="1"
                    Grid.Row="3"
                    Margin="5,4"/>
                                        </Grid>
                                    </Border>
                                </Viewbox>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding HaveMeter}"
                                                 Value="true">
                                        <Setter TargetName="borderHaveMeter" 
                                                Property="Background" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HaveMeter}"
                                                 Value="false">
                                        <Setter TargetName="borderHaveMeter" 
                                                Property="Background" Value="#FF303030"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsTop}"
                                                 Value="true">
                                        <Setter TargetName="borderTop" 
                                                Property="Background" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsTop}"
                                                 Value="false">
                                        <Setter TargetName="borderTop" 
                                                Property="Background" Value="#FF303030"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBottom}"
                                                 Value="true">
                                        <Setter TargetName="borderBottom" 
                                                Property="Background" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBottom}"
                                                 Value="false">
                                        <Setter TargetName="borderBottom" 
                                                Property="Background" Value="#FF303030"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsTop}" Value="true"/>
                                            <Condition Binding="{Binding IsBottom}" Value="true"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter TargetName="borderTop" 
                                    		Property="Background" Value="Red"/>
                                        <Setter TargetName="borderBottom" 
                                    		Property="Background" Value="Red"/>
                                    </MultiDataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Controls:MeterContainer}">
                        <Controls:UniformWrapPanel 
                            ColumnCount="{TemplateBinding ColumnCount}"
                            IsItemsHost="True"
                            Orientation="Horizontal"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
