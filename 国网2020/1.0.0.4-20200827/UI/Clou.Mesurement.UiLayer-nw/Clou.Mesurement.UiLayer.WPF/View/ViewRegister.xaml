<Window x:Class="Mesurement.UiLayer.WPF.View.ViewRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="软件注册" Height="300" Width="310">
    <Grid Background="{DynamicResource 窗口背景色}">
        <Label Margin="20,30,0,0" FontSize="16">机器码：</Label>
        <TextBox Name="txt_MNum"
            Margin="70,-175,0,0"
            Height="20"
            Width="190"
            />
        <Label Margin="20,80,0,0" FontSize="16">注册码：</Label>
        <TextBox Name="txt_RNum"
            Margin="70,-75,0,0"
            Height="20"
            Width="190"
            />
        <Button Width="80"
                Height="22"
                Margin="-90,60,0,0"
                Click="BtnRegister_Click"
                FontSize="16"
                >注册</Button>
        <Button Width="80"
                Height="22"
                Margin="120,60,0,0"
                Click="BtnExit_Click"
                FontSize="16"
                >退出</Button>
    </Grid>
</Window>
