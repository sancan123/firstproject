<basemodel:DockControlDisposable x:Class="Mesurement.UiLayer.WPF.View.ViewAbout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:basemodel="clr-namespace:Mesurement.UiLayer.WPF.Model"
             xmlns:local="clr-namespace:Mesurement.UiLayer.WPF.Controls"
             mc:Ignorable="d" 
                                 Margin="5"
                                 Foreground="{DynamicResource 字体颜色标准}"
                                 FontSize="24">
        <StackPanel Width="473" Height="300">
        <Image HorizontalAlignment="Left"
               Margin="5"
            Source="/Mesurement.UiLayer.WPF;component/images/logo.png"
               Width="120"/>
        <TextBlock Margin="10,20,10,10" x:Name="textBlockProductName"/>
        <TextBlock Margin="10" Name="textBlockVersion"/>
        <TextBlock Margin="10,10,0,10" Name="textBlockCopyright"/>
        <TextBlock Margin="10,10,0,10" Name="textBlockCompanyName" Height="64" TextWrapping="Wrap"/>
    </StackPanel>
</basemodel:DockControlDisposable>